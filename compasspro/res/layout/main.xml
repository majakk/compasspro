<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mtr="http://schemas.android.com/apk/res/studio.coldstream.compasspro"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#222266"
    >
	<TextView  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="/\\"
	    android:textSize="16dp"
	    android:layout_gravity="center"
	    android:textStyle="bold"
	    android:textColor="#8888ee"
    />
    <TextView  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="|"
	    android:textSize="16dp"
	    android:layout_gravity="center_horizontal"
	    android:textStyle="bold"
	    android:textColor="#8888ee"
    />
    <TextView  
    	android:id="@+id/textView1"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="|"
	    android:textSize="16dp"
	    android:layout_gravity="center_horizontal"
	    android:textStyle="bold"
	    android:textColor="#8888ee"
    />
    <studio.coldstream.compasspro.Thermometer
		    android:id="@+id/thermometer"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="10"
			mtr:totalNotches="360"
			mtr:incrementPerLargeNotch="45"
			mtr:incrementPerSmallNotch="15"
			mtr:scaleColor="0xff8888ee"
			mtr:scaleCenterValue="0"
			mtr:scaleMinValue="0"
			mtr:scaleMaxValue="359"
			mtr:scaleUpperTitle="Compass Pro"
			android:layout_gravity="center"
    	/>
    
    
</LinearLayout>
